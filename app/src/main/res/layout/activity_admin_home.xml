<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loadscreenbackground"
    tools:context=".AdminHome">

    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="529dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- HEADER -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="16dp"
            app:srcCompat="@drawable/right_icons" />

        <!-- ADMIN BUTTONS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Welcome"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Dear admin"
                android:textColor="@color/black"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="255dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="142.5dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/cardoutline"
                    android:elevation="8dp">

                    <Button
                        android:id="@+id/btnManageBooks"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00FFFFFF"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="BOOKS"
                        android:textSize="18sp"
                        app:icon="@drawable/bookicon"
                        app:iconGravity="textTop"
                        app:iconSize="50dp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="142.5dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/cardoutline"
                    android:backgroundTintMode="screen"
                    android:elevation="8dp">

                    <Button
                        android:id="@+id/btnmember"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#00262C34"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="MEMBER"
                        android:textSize="20sp"
                        app:icon="@drawable/icons8_member_50"
                        app:iconGravity="textTop"
                        app:iconPadding="20dp"
                        app:iconSize="50dp" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
